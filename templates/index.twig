{% extends 'base.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded shadow-sm">
        <img class="mr-3" src="/docs/4.4/assets/brand/bootstrap-outline.svg" alt="" width="48" height="48">
        <div class="lh-100">
            <h6 class="mb-0 text-white lh-100">Bootstrap</h6>
            <small>Since 2011</small>
        </div>
    </div>

    {% if auth().current %}
        <h6 class="border-bottom border-gray pb-2 mb-0" id="showFormAddLink">Ajouter un lien</h6>
        <form action="{{ path('root.post') }}" method="post" class="form" id="addFormLink">
            {{ csrf_field() }}
            <div class="form-group">
                <input type="text" name="url" autofocus required placeholder="url" class="form-control">
            </div>
            <div class="form-group">
                <textarea class="form-control" placeholder="Description" name="description"></textarea>
            </div>
            <button class="btn btn-primary" type="submit">Ajouter</button>
        </form>
    {% endif %}

    <div class="my-3 p-3 bg-white rounded shadow-sm">
        <h6 class="border-bottom border-gray pb-2 mb-0">Les derniers liens ajout√©s</h6>
        {% include 'partials/links.twig' with {'links': links} only %}

        <small class="d-block text-right mt-3">
            <a href="{{ path('link.index') }}">Voir tous les liens</a>
        </small>
    </div>

    <div class="my-3 p-3 bg-white rounded shadow-sm">
        <h6 class="border-bottom border-gray pb-2 mb-0">Suggestions</h6>
        <div class="media text-muted pt-3">
            <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"/><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
